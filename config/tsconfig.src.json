{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "ES5",

        "sourceMap": true,
        "inlineSources": true,

        "jsx": "react-jsx",
        "baseUrl": "../src",

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "importsNotUsedAsValues": "preserve",
        "isolatedModules": true
    },
    "include": ["../src"]
}
